  {
    "name": "BlinkNote",
    "version": "1.0",
    "description": "Fastest way to take a note that'll stick around",
    "permissions": ["storage", "tabs"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "BlinkNote - Alt+B"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Alt+B",
          "mac": "Alt+B"
        },
        "description": "BlinkNote - Alt+B"
      }
    },
    "manifest_version": 2
  }